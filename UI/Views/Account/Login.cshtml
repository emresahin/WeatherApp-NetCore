@using Business.Models
@using Core.HttpRequest.Models
@model ServiceRequestResult<UserModel>


<form asp-action="Login" method="post">

    <div class="card-body">
        @if (Model!=null && Model.IsSuccess == false)
        {
            <div class="alert alert-danger" role="alert">
                @Model.Message <br />
                Üyeliğiniz yoksa <a href="/Account/Register">tıklayınız.</a>
            </div>
        }
        <form>
            <div class="form-group col-md-6">
                <h5 class="card-title text-center">Giriş Yap</h5>
                <label for="email">E-posta</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label for="password">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
            </div><br />
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </form>
        <div class="text-center mt-3">
            @Html.ValidationSummary()
            <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
        </div>
    </div>


</form>